@using LogisticMVC.Models.CompanyModel
@model CompanyViewModel
@{
    ViewData["Title"] = "CreateCompany";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    /* Özel stillendirmeler */
    .custom-input {
        border-radius: 25px; /* Input alanlarını yuvarlat */ 
    }
</style>
<div class="container mt-5">
    <h2 class="mb-4">Şirket Ekle</h2>
    <form asp-action="CreateCompany" asp-controller="Company" method="post">
        <div class="row mb-3">
            <label for="companyName" class="col-sm-2 col-form-label">Şirket Adı:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="companyName" name="companyName" required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="taxNumber" class="col-sm-2 col-form-label">Vergi Numarası:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="taxNumber" name="taxNumber" required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="address" class="col-sm-2 col-form-label">Adres:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="address" name="address" required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="firmNumber" class="col-sm-2 col-form-label">Firma Numarası:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="firmNumber" name="firmNumber" required>
            </div>
        </div>
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

<!-- Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
