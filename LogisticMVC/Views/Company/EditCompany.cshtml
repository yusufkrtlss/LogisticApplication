@using LogisticMVC.Models.CompanyModel
@model CompanyViewModel
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2>Şirket Güncelle</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="EditCompany" asp-controller="Company" method="post">
        <input asp-for="id" type="hidden" />
        <div class="form-group">
            <label asp-for="companyName" class="control-label">Şirket Adı:</label>
            <input asp-for="companyName" class="form-control" />
            <span asp-validation-for="companyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="firmNumber" class="control-label">Firma Numarası:</label>
            <input asp-for="firmNumber" class="form-control" />
            <span asp-validation-for="firmNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="taxNumber" class="control-label">Vergi Numarası:</label>
            <input asp-for="taxNumber" class="form-control" />
            <span asp-validation-for="taxNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="address" class="control-label">Adres:</label>
            <input asp-for="address" class="form-control" id="passwordField" />
            <span asp-validation-for="address" class="text-danger"></span>
        </div>

        <div class="offset-sm-2 col-sm-5">
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>
     
    </form>
</div>

<!-- Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
