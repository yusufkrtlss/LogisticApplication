@using LogisticMVC.Models.UserModels
@model UserViewModel

@{
    ViewData["Title"] = "Create New User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-4">
    <h2>Create New User</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    <form asp-action="CreateUser" asp-controller="User" method="post">
        <div class="row mb-3">
            <label for="userName" class="col-sm-2 col-form-label">Kullanıcı Adı:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="userName" name="userName" required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="fullName" class="col-sm-2 col-form-label">Tam Ad:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="fullName" name="fullName" required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="password" class="col-sm-2 col-form-label">Şifre :</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="password" name="password" required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="email" class="col-sm-2 col-form-label">Email :</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="email" name="email" required>
            </div>
        </div>
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
<!-- Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>