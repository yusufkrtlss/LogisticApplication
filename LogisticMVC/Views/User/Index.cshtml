@using LogisticMVC.Models.UserModels
@model List<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


<style>
    #addUserButton {
        margin-top: 10px;
        display: block;
    }

    .table-responsive table {
        width: 100%;
    }

    .table td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .btn-sm {
        padding: 5px 10px; 
        font-size: 12px; 
    }

</style>

<div class="container mt-1 ms-3">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-sm" id="userTable">
            <thead class="thead-light">
                <tr>
                    <th>
                        Kullanıcı Adı 
                    </th>
                    <th>
                        Tam Ad 
                    </th>
                    <th>
                        Email
                    </th>
                    <th>Aktif</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td data-label="Kullanıcı Adı">@user.UserName</td>
                        <td data-label="Tam Ad">@user.FullName</td>
                        <td data-label="Email">@user.Email</td>
                        <td data-label="Aktif">@user.IsActive</td>
                        <td data-label="">
                            <a href="../../../User/EditUser?id=@user.Id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a href="../../../User/DefinitionUser?id=@user.Id" class="btn btn-info btn-sm">Tanımlamalar</a>
                            <a href="../../../User/DeleteUser?id=@user.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-between align-items-center">
        <a href="../../../User/CreateUser" class="btn btn-success" id="addUserButton">Yeni Kullanıcı Ekle</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
