@using LogisticMVC.Models.RolesModel
@model List<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">



<style>
    #addUserButton {
        margin-bottom: 20px;
        display: block;
    }

    .table-responsive table {
        width: 100%;
    }

    .table td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .btn-sm {
        padding: 5px 10px; /* Küçük düğme boyutları */
        font-size: 12px; /* Küçük düğme metin boyutu */
    }

</style>


<div class="container mt-1 ms-3">

    <div class="table-responsive table-sm">
        <table class="table table-striped table-bordered table-sm">
            <thead class="thead-light">
                <tr>
                    <th>Rol Adı: </th>
                    <th>Rol Adı (İngilizce):</th>
                    <th>Admin mi </th>
                    <th></th>
                    <!-- Diğer sütun başlıkları buraya eklenebilir -->
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td data-label="Rol Adı">@role.roleName</td>
                        <td data-label="Rol Adı(İngilizce)">@role.roleNameEn</td>
                        <td data-label="Admin mi">@role.isAdmin</td>
                        <td data-label="">
                            <a href="../../../Roles/EditRole?id=@role.id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a href="../../../RoleModules/Index?roleId=@role.id" class="btn btn-info btn-sm">Modül Tanımla</a>
                            <a href="../../../Roles/DeleteRole?id=@role.id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
     <div class="d-flex justify-content-between align-items-center">
        <a href="../../../Roles/CreateRole" class="btn btn-success" id="addUserButton">Yeni Rol Ekle</a>
    </div>
</div> 


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

