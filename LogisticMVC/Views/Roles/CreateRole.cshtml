@using LogisticMVC.Models.RolesModel
@model RoleViewModel
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    /* Özel stillendirmeler */
    .custom-input {
        border-radius: 25px; /* Input alanlarını yuvarlat */
    }
</style>
<div class="container mt-5">
    <h2 class="mb-4">Rol Ekle</h2>
    <form asp-action="CreateRole" asp-controller="Roles" method="post">
        <div class="row mb-3">
            <label for="roleName" class="col-sm-2 col-form-label">Rol Adı:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="roleName" name="roleName" required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="roleNameEn" class="col-sm-2 col-form-label">Rol Adı (İngilizce):</label>
            <div class="col-sm-4">
                <input type="text" class="form-control custom-input" id="roleNameEn" name="roleNameEn" required>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Admin mi:</label>
            <div class="col-sm-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin">
                    <label class="form-check-label" for="isAdmin">Evet</label>
                </div>
            </div>
        </div>
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Oluştur</button>
        </div>
    </form>
</div>

<!-- Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

