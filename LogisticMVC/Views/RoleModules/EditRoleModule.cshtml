@using LogisticMVC.Models.RoleModulesModels
@model EditRoleModuleViewModel
@{
    ViewData["Title"] = "EditRoleModule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="mb-4">Rol Modül Düzenle</h2>

            <form asp-action="EditRoleModule" asp-controller="RoleModules" method="post">

                <div class="form-group">
                    <label asp-for="companyId" class="control-label">Şirket Adı: </label>
                    <input asp-for="companyId" class="form-control" />
                    <span asp-validation-for="companyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="moduleId" class="control-label">Modul Adı:</label>
                    <input asp-for="moduleId" class="form-control" />
                    <span asp-validation-for="moduleId" class="text-danger"></span>
                </div>
                
                <div class="offset-sm-2 col-sm-5">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
                <input asp-for="id" type="hidden" /> <!-- Bu satırda kullanıcının ID'sini gizli bir alan olarak formda tutuyoruz -->
            </form>
        </div>
    </div>
</div>




<!-- Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

