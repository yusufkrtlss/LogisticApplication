@using LogisticMVC.Models.RolesModel
@model List<RoleModuleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    #addUserButton {
        margin-bottom: 20px;
        display: block;
    }

    .table-responsive table {
        width: 100%;
    }

    .table td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .btn-sm {
        padding: 5px 10px; /* Küçük düğme boyutları */
        font-size: 12px; /* Küçük düğme metin boyutu */
    }

</style>
<div class="container mt-1 ms-3">
    <h2>Role Modules</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>Şirketler:</th>
                    <th>Modüller:</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var roleModule in Model)
                {
                    <tr>
                        <td>@(roleModule.companyId ?? "N/A")</td>
                        <td>@(roleModule.moduleId ?? "N/A")</td>
                        <td data-label="">
                            <a href="../../../RoleModules/EditRoleModule?id=@roleModule.id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a href="../../../RoleModules/DeleteRoleModule?id=@roleModule.id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="../../../RoleModules/CreateRoleModule?roleid=@roleModule.roleId" class="btn btn-success" id="addUserButton">Yeni Rol Ekle</a>
                    </div>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No role modules found.</p>
    }

    <a asp-action="Index" asp-controller="Roles" class="btn btn-secondary mt-3">Back to Roles</a>
</div>

<!-- Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


